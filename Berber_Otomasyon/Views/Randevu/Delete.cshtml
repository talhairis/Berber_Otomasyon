@model Berber_Otomasyon.Models.Randevu

@{
    ViewData["Title"] = "Randevu Oluştur";
}

<div class="create-container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="p-4 shadow rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                <!-- Başlangıç Saati -->
                <div class="form-floating mb-3">
                    <input asp-for="BaslangicSaati" class="form-control" placeholder="Başlangıç Saati" />
                    <label asp-for="BaslangicSaati">Başlangıç Saati</label>
                    <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
                </div>

                <!-- Bitiş Saati -->
                <div class="form-floating mb-3">
                    <input asp-for="BitisSaati" class="form-control" placeholder="Bitiş Saati" />
                    <label asp-for="BitisSaati">Bitiş Saati</label>
                    <span asp-validation-for="BitisSaati" class="text-danger"></span>
                </div>

                <!-- Kaydet Butonu -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Oluştur</button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-dark">Listeye Dön</a>
    </div>
</div>

<style>
    .create-container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #FFFFFF;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        font-family: 'Playfair Display', serif;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
        color: #333333;
        margin-bottom: 20px;
    }

    .form-floating label {
        color: #555555;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #CCCCCC;
    }

        .form-control:focus {
            border-color: #333333;
            box-shadow: 0 0 5px rgba(51, 51, 51, 0.5);
        }

    .btn-dark {
        background-color: #333333;
        color: #FFFFFF;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-dark:hover {
            background-color: #555555;
        }

    .btn-outline-dark {
        border-color: #333333;
        color: #333333;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-outline-dark:hover {
            background-color: #333333;
            color: #FFFFFF;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
