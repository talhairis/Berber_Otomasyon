@model Berber_Otomasyon.Models.IslemTuru

@{
    ViewData["Title"] = "İşlem Türünü Sil";
}

<div class="delete-container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <h3 class="text-center">Bu işlemi silmek istediğinizden emin misiniz?</h3>
    <hr />
    <div class="details">
        <h4>İşlem Türü Detayları</h4>
        <dl class="row mt-4">
            <dt class="col-sm-4">İsim</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Isim)</dd>

            <dt class="col-sm-4">Açıklama</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Aciklama)</dd>

            <dt class="col-sm-4">Fiyat</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fiyat)</dd>

            <dt class="col-sm-4">Süre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Sure)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="IslemTuruId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-outline-dark">Listeye Dön</a>
    </form>
</div>

<style>
    .delete-container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #FFFFFF;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        font-family: 'Playfair Display', serif;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
        color: #333333;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 18px;
        color: #555555;
        margin-bottom: 20px;
    }

    .details h4 {
        font-size: 22px;
        font-weight: bold;
        color: #333333;
        margin-bottom: 15px;
    }

    dl {
        font-size: 16px;
    }

    dt {
        font-weight: bold;
        color: #333333;
    }

    dd {
        color: #555555;
    }

    .btn-danger {
        background-color: #d9534f;
        color: #FFFFFF;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #c9302c;
        }

    .btn-outline-dark {
        border-color: #333333;
        color: #333333;
        border-radius: 8px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-outline-dark:hover {
            background-color: #333333;
            color: #FFFFFF;
        }
</style>
