@model List<Berber_Otomasyon.Models.ViewModels.MusteriOnayliViewModel>

@{
    ViewData["Title"] = "Onaysız Randevular";
}

<div class="container">
    <h1 class="text-center mb-4 text-primary">Onaysız Randevular</h1>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var randevu in Model)
            {
                <div class="list-group-item mb-3 p-3 border rounded">
                    <h4 class="mb-2">@randevu.RandevuTarih.ToString("dd MMMM yyyy")</h4>
                    <hr />
                    <p><strong>Çalışan:</strong> @randevu.CalisanAdi @randevu.CalisanSoyadi</p>
                    <p><strong>Saat:</strong> @randevu.BaslangicSaati.ToString("hh\\:mm") - @randevu.BitisSaati.ToString("hh\\:mm")</p>
                    <p><strong>Toplam Süre:</strong> @randevu.ToplamSure dakika</p>
                    <p><strong>Toplam Ücret:</strong> @randevu.ToplamUcret.ToString("C")</p>
                    <p><strong>İşlemler:</strong></p>
                    <ul>
                        <hr />
                        @foreach (var islem in randevu.IslemTurleri)
                        {
                            <li>İşlem Adı: @islem.Isim</li>
                            <li>İşlem Süresi: @islem.Sure dakika</li>
                            <li>İşlem Ücreti: @islem.Fiyat.ToString("C")</li>
                            <hr />
                        }
                    </ul>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-danger fs-4">Onaysız randevunuz bulunmamaktadır.</p>
    }
</div>

<!-- FontAwesome Icon Kit -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>
    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #FFFFFF;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #007bff;
        font-weight: bold;
    }

    .list-group-item {
        background-color: #f8f9fa;
        border: none;
        border-left: 4px solid #007bff;
    }

        .list-group-item i {
            color: #28a745;
            margin-right: 10px;
        }

        .list-group-item:hover {
            background-color: #e9ecef;
            border-left: 4px solid #0056b3;
        }

    .text-secondary {
        font-weight: bold;
    }

    .text-success {
        font-weight: bold;
    }
</style>
