@model Berber_Otomasyon.Models.ViewModels.RegisterObjectModel

<div class="add-employee-container">
    <h1>Çalışan Ekle</h1>
    <form asp-action="RegisterC" method="post">
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Sol Taraf: Ad, Soyad, E-posta, Parola -->
            <div class="col-md-6">
                <h2>Temel Bilgiler</h2>
                <div class="form-group">
                    <label asp-for="registerViewModel.KullaniciAdi">Ad</label>
                    <input asp-for="registerViewModel.KullaniciAdi" class="form-control" placeholder="Adınızı girin" />
                    <span asp-validation-for="registerViewModel.KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="registerViewModel.KullaniciSoyadi">Soyad</label>
                    <input asp-for="registerViewModel.KullaniciSoyadi" class="form-control" placeholder="Soyadınızı girin" />
                    <span asp-validation-for="registerViewModel.KullaniciSoyadi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="registerViewModel.Email">E-posta</label>
                    <input asp-for="registerViewModel.Email" class="form-control" placeholder="E-posta adresinizi girin" />
                    <span asp-validation-for="registerViewModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="registerViewModel.Password">Parola</label>
                    <input asp-for="registerViewModel.Password" type="password" class="form-control" placeholder="Parola girin" />
                    <span asp-validation-for="registerViewModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="registerViewModel.ConfirmPassword">Parola (Tekrar)</label>
                    <input asp-for="registerViewModel.ConfirmPassword" type="password" class="form-control" placeholder="Parolayı tekrar girin" />
                    <span asp-validation-for="registerViewModel.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- Sağ Taraf: Ünvan, İşlemler ve Randevular -->
            <div class="col-md-6">
                <h2>Unvan</h2>
                <div class="form-group">
                    <label>
                        <input asp-for="registerViewModel.CalisanUnvan" type="radio" value="Çırak"> Çırak
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <input asp-for="registerViewModel.CalisanUnvan" type="radio" value="Kalfa"> Kalfa
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        <input asp-for="registerViewModel.CalisanUnvan" type="radio" value="Usta"> Usta
                    </label>
                </div>

                <h2>İşlemler</h2>
                <div id="operations">
                    @foreach (var islem in Model.addCalisanViewModel.IslemTurleri)
                    {
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" name="selectedArrays.SelectedIslemTurleri" value="@islem.IslemTuruId" class="form-check-input" />
                                <b>@islem.Isim</b> - @islem.Fiyat.ToString("C") (@islem.Sure dakika)<br />
                                <small>@islem.Aciklama</small>
                            </label>
                        </div>
                    }
                        
                </div>


                <h2>Randevular</h2>
                <div id="appointments">
                    @foreach (var randevu in Model.addCalisanViewModel.Randevular)
                    {
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" name="selectedArrays.SelectedRandevular" value="@randevu.RandevuId" class="form-check-input" />
                                Başlangıç: @randevu.BaslangicSaati.ToString("hh\\:mm") - Bitiş: @randevu.BitisSaati.ToString("hh\\:mm")
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-dark">Çalışanı Kaydet</button>
        </div>
    </form>
</div>

<style>
    .add-employee-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
        background-color: #FFFFFF;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        font-family: 'Playfair Display', serif;
    }

        .add-employee-container h1 {
            font-size: 32px;
            text-align: center;
            color: #333333;
            margin-bottom: 20px;
        }

        .add-employee-container h2 {
            font-size: 24px;
            color: #555555;
            margin-bottom: 15px;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-size: 16px;
            color: #333333;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #CCCCCC;
        border-radius: 5px;
    }

    input[type="radio"], input[type="checkbox"] {
        margin-right: 10px;
    }

    .btn-dark {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        background-color: #333333;
        color: #FFFFFF;
        cursor: pointer;
        border: none;
    }

        .btn-dark:hover {
            background-color: #555555;
        }
</style>
