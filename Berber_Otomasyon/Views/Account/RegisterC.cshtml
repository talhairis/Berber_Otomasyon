@model Berber_Otomasyon.Models.ViewModels.RegisterObjectModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <h2>Müşteri Hesabı Oluştur</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="registerViewModel.KullaniciAdi" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="registerViewModel.KullaniciAdi">Kullanıcı Adı</label>
                <span asp-validation-for="registerViewModel.KullaniciAdi" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="registerViewModel.KullaniciSoyadi" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="registerViewModel.KullaniciSoyadi">Kullanıcı Soyadı</label>
                <span asp-validation-for="registerViewModel.KullaniciSoyadi" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="registerViewModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="registerViewModel.Email">Email</label>
                <span asp-validation-for="registerViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="registerViewModel.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="registerViewModel.Password">Şifre</label>
                <span asp-validation-for="registerViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="registerViewModel.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="registerViewModel.ConfirmPassword">Şifreyi Tekrarla</label>
                <span asp-validation-for="registerViewModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Kaydol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
