@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Local Account Login -->
        <div class="col-md-6">
            <section class="p-4 shadow rounded" style="background-color: #f9f9f9;">
                <h2 class="text-center mb-4">Log in</h2>
                <hr />
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <!-- Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Remember me
                        </label>
                    </div>

                    <!-- Login Button -->
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg custom-btn btn-dark">Log in</button>
                    </div>

                    <!-- Additional Links -->
                    <div class="mt-3 text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword" class="custom-link">Şifrenizi mi unuttunuz?</a></p>
                        <p><a asp-controller="Account" asp-action="RegisterM" asp-route-returnUrl="@Model.ReturnUrl" class="custom-link">Yeni kullanıcıysanız kaydolun</a></p>
                    </div>
                </form>
            </section>
        </div>

        <!-- External Login Options -->
        <div class="col-md-6 mt-5 ">
            <section class="p-4 shadow rounded" style="background-color: #ffffff;">
                <h3>Hoşgeldiniz...</h3>
                <img src="~/img/4.jpg" alt="Hoşgeldiniz">
                
                <hr />

                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {

                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn custom-btn mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        Log in with @provider.DisplayName
                                    </button>
                                }
                            </p>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

<!-- CSS for Styling -->
<style>
    body {
        background-color: #f3f4f6;
    }
    form {
        border-radius: 10px;
    }
    h2, h3 {
        font-family: 'Playfair Display', serif;
        color: #333333;
    }
    .form-floating input {
        border-radius: 10px;
    }

    /* Custom Button Style */
    .custom-btn {
        background-color: #333333; /* Örnek ana renk */
        border-color: #333333;
        color: #ffffff;
        border-radius: 10px;
    }


    /* Custom Link Style */
    .custom-link {
        color: #373737; /* Sizin koyu renk konseptiniz */
        text-decoration: none;
    }
    .custom-link:hover {
        text-decoration: underline;
        color: #565656; /* Hover için daha açık bir ton */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
